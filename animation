@keyframes slideInFromLeft {
  0% {
    transform: translateX(-100%);
    opacity: 0;
  }
  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Add a class for the elements you want to animate */
.slide-in {
  animation: 1s ease-out 0s 1 slideInFromLeft;
}

/* You can apply this class to each section or individual elements */
.bio,
.projects,
.contact {
  /* your existing styles */
  animation: 1s ease-out 0s 1 slideInFromLeft;
}
